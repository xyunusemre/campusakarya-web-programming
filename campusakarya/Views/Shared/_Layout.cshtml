<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CampuSakarya</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts - Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f9f9f9;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }
        .navbar {
            background-color: #004085;
        }
        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 600;
        }
        .hero-section {
            background: url('/assets/img/background.png') center/cover no-repeat;
            color: white;
            padding: 60px 0;
            text-align: center;
        }
        .event-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            transition: transform 0.3s ease-in-out;
        }
        .event-card:hover {
            transform: scale(1.05);
        }
        .container {
            flex: 1;
        }
        .footer {
            background-color: #004085;
            color: white;
            text-align: center;
            padding: 10px 0;
        }
        h1, h2, h3 {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">CampuSakarya</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Events/Events">Etkinlikler</a></li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- If the user is logged in, show these options -->
                        <li class="nav-item">
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <button type="submit" class="nav-link btn btn-link" style="color:white;">Çıkış Yap</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <!-- If the user is not logged in, show login button -->
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Giriş Yap</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- RenderBody -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 - CampuSakarya</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
