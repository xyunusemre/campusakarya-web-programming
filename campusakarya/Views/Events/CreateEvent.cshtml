@model campusakarya.Models.Event

@{
    ViewBag.Title = "CreateEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Create Event Section -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4">Etkinlik Ekle</h2>
            
            <!-- Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="EventName" class="form-label">Etkinlik Adı</label>
                    <input type="text" class="form-control" id="EventName" name="EventName" placeholder="Etkinlik Adı" required>
                </div>
                
                <div class="mb-3">
                    <label for="Description" class="form-label">Açıklama</label>
                    <textarea class="form-control" id="Description" name="Description" placeholder="Etkinlik Açıklaması" required></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="Category" class="form-label">Kategori</label>
                    <select class="form-select" id="Category" name="Category" required>
                        <option value="1">Kariyer</option>
                        <option value="2">Eğlence</option>
                        <option value="3">Doğa</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="Date" class="form-label">Tarih</label>
                    <input type="date" class="form-control" id="Date" name="Date">
                </div>

                <div class="mb-3">
                    <label for="Location" class="form-label">Konum</label>
                    <input type="text" class="form-control" id="Location" name="Location" placeholder="Konum" required>
                </div>

                <div class="mb-3">
                    <label for="Image" class="form-label">Etkinlik Görseli</label>
                    <input type="file" class="form-control" id="Image" name="Image">
                </div>

                <div class="mb-3">
                    <label for="Price" class="form-label">Fiyat</label>
                    <input type="text" class="form-control" id="Price" name="Price" placeholder="Fiyat" required>
                </div>

                <div class="mb-3">
                    <label for="PresentedBy" class="form-label">Sunan Kişi</label>
                    <input type="text" class="form-control" id="PresentedBy" name="PresentedBy" placeholder="Sunan Kişi" required>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">Etkinlik Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background-color: #004085;
        border: none;
        font-size: 1.1rem;
        padding: 10px;
    }

    .btn-primary:hover {
        background-color: #003366;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
    }
</style>
