@model campusakarya.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register"; // Sayfa başlığını "Register" olarak ayarlıyoruz
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout dosyasını belirliyoruz
}

<!-- Signup Section -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Kayıt Ol</h2>

            <!-- Model validation error handling -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li> <!-- Hata mesajları listeleniyor -->
                        }
                    </ul>
                </div>
            }
            
            <!-- Register Form -->
            <form asp-action="Register" asp-controller="Account" method="post">
                <!-- Kullanıcı adı alanı -->
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
                    <span asp-validation-for="UserName" class="text-danger"></span> <!-- Hata mesajları -->
                </div>

                <!-- Email alanı -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span> <!-- Hata mesajları -->
                </div>

                <!-- Şifre alanı -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input asp-for="Password" class="form-control" placeholder="Şifre" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span> <!-- Hata mesajları -->
                </div>

                <!-- Şifre tekrar alanı -->
                <div class="form-group mb-4"> <!-- 'mb-4' sınıfı ile alt boşluk ekliyoruz -->
                    <label asp-for="ConfirmPassword">Şifre (Tekrar)</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span> <!-- Hata mesajları -->
                </div>


                <!-- Kayıt ol butonu -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
                </div>
            </form>

            <!-- Giriş yap linki -->
            <div class="text-center mt-3">
                <p>Zaten Üye Misin? <a asp-action="Login" asp-controller="Account">Giriş Yap</a></p>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background-color: #004085; /* Buton arka plan rengi */
        border: none; /* Kenarlık yok */
        font-size: 1.1rem; /* Yazı tipi boyutu */
        padding: 10px; /* İç boşluk */
    }

    .btn-primary:hover {
        background-color: #003366; /* Hover (fareyle üzerine gelindiğinde) durumu */
    }
</style>
