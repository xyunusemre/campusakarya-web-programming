@model campusakarya.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login"; // Sayfa başlığını "Login" olarak ayarlıyoruz
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout dosyasını belirliyoruz
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">CampuSakarya Üye Girişi</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger text-center">
                    @TempData["ErrorMessage"] // Eğer geçici hata mesajı varsa, bunu gösterir
                </div>
            }

            <form asp-action="Login" asp-controller="Account" method="post">
                <!-- Kullanıcı adı için input alanı -->
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı veya Email" />
                    <span asp-validation-for="UserName" class="text-danger"></span> <!-- Hata mesajı -->
                </div>

                <!-- Şifre için input alanı -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input asp-for="Password" class="form-control" placeholder="Şifre" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span> <!-- Hata mesajı -->
                </div>

                <!-- Giriş butonu -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">Giriş</button>
                </div>
            </form>

            <!-- Kayıt ol linki -->
            <div class="text-center mt-3">
                <p>Hala Üye Değil Misin? <a asp-action="Register" asp-controller="Account">Kayıt Ol</a></p>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background-color: #004085; /* Buton arka plan rengi */
        border: none; /* Kenarlık yok */
        font-size: 1.1rem; /* Yazı tipi boyutu */
        padding: 10px; /* İç boşluk */
    }

    .btn-primary:hover {
        background-color: #003366; /* Hover (fareyle üzerine gelindiğinde) durumu */
    }
</style>
